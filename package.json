{
  "name": "gastos-compartidos",
  "version": "1.0.0",
  "private": true,
  "description": "App para gestionar gastos compartidos con divisi√≥n configurable",
  "scripts": {
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run start --workspace=frontend",
    "build": "npm-run-all build:backend build:frontend",
    "build:backend": "npm run build --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
